@{
    ViewData["Title"] = "Ana Sayfa";

    // ViewData'dan kullanıcı rolünü al
    var userRole = ViewData["userRole"] as string;
}

<div class="container mt-4">
    <div class="jumbotron text-center">
        <h1 class="display-4">Online Sınav Sistemi</h1>
        <p class="lead">HTML ve CSS bilgilerinizi test edin ve geliştirin!</p>
        <hr class="my-4" />

        @if (User?.Identity?.IsAuthenticated == true)
        {
            <p>Merhaba, <strong>@User.Identity.Name</strong>! Rolünüz: <strong>@userRole</strong></p>

            @if (userRole == "Öğrenci")
            {
                <div class="mt-3">
                    <a href="@Url.Action("Index", "Exam")" class="btn btn-primary btn-lg mb-2">Sınavlara Katıl</a>
                    <a href="@Url.Action("Result", "Exam")" class="btn btn-info btn-lg mb-2">Sonuçlarınızı Görüntüleyin</a>
                </div>
            }
            else if (userRole == "Öğretmen")
            {
                <div class="mt-3">
                    <a href="@Url.Action("Create", "Exam")" class="btn btn-success btn-lg mb-2">Yeni Sınav Oluştur</a>
                    <a href="@Url.Action("Index", "Exam")" class="btn btn-primary btn-lg mb-2">Mevcut Sınavları Görüntüle</a>
                </div>
            }
            else
            {
                <p>Rolünüz tanımlı değil. Lütfen sistem yöneticisine başvurun.</p>
            }
        }
        else
        {
            <p>Bu sistemde sınavlara katılmak veya yeni sınavlar oluşturmak için lütfen giriş yapın ya da kayıt olun.</p>
            <div class="mt-3">
                <a href="/Identity/Account/Login" class="btn btn-primary btn-lg mb-2">Giriş Yap</a>
                <a href="/Identity/Account/Register" class="btn btn-secondary btn-lg mb-2">Kayıt Ol</a>
            </div>
        }
    </div>

    <div class="row text-center mt-5">
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="card-title">Öğrenciler İçin</h3>
                    <p class="card-text">HTML ve CSS sınavlarına katılarak bilginizi test edin ve sonuçlarınızı görün!</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="card-title">Öğretmenler İçin</h3>
                    <p class="card-text">Yeni sınavlar oluşturun, sorular ekleyin ve öğrenci sonuçlarını yönetin.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="card-title">Kolay Kullanım</h3>
                    <p class="card-text">Kullanıcı dostu bir arayüz ile sınavlarınızı rahatça yönetin.</p>
                </div>
            </div>
        </div>
    </div>
</div>







